<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../../partials/head.ejs') %>
</head>
<body>
    <h2>Elenco corsi</h2>
    <a href="/admin/professional-courses/create-courses">Aggiungi nuovo corso</a>
    <ul>
    <% courses.forEach(course => { %>
        <img src="<%= course.image %>" alt="immagine" style="width: 150px; height: auto;">
        <li><%= course.title %></li>
        <li><%= course.subtitle %></li>
        <li><%= course.duration %> ore</li>
        <li><%= course.modality %></li>
        <a href="/admin/professional-courses/<%= course._id %>">Vai al dettaglio del corso</a>
        <a href="/admin/professional-courses/edit/<%= course._id %>">Modifica il corso</a>
        <form method="POST" action="/admin/professional-courses/delete/<%= course._id %>?_method=DELETE" style="display:inline;">
            <button type="submit" onclick="return confirm('Eliminare questo corso?')">ğŸ—‘ï¸</button>
        </form>
    <% }) %>
